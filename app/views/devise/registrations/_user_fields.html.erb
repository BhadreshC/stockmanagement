<div class="input-group mb-3">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Full Name ", class: "form-control", required: true %>
  <div class="input-group-append">
    <div class="input-group-text">
      <span class="fas fa-user"></span>
    </div>
  </div>
</div>
<div class="input-group mb-3">
   <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class: "form-control", required: true %>
  <div class="input-group-append">
    <div class="input-group-text">
      <span class="fas fa-envelope"></span>
    </div>
  </div>
</div>
<div class="input-group mb-3">
  <% if @minimum_password_length %>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class: "form-control", required: true%>
  <div class="input-group-append">
    <div class="input-group-text">
      <span class="fas fa-lock"></span>
    </div>
  </div>
</div>
<div class="input-group mb-3">
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Retype-password", class: "form-control",  required: true%>
  <div class="input-group-append">
    <div class="input-group-text">
      <span class="fas fa-lock"></span>
    </div>
  </div>
</div>
