<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0 text-dark">Dashboard</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><%= @store.name %></li>
				</ol>
			</div>
		</div>
	</div>
</div>
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-4 col-8">
				<div class="small-box bg-info">
					<div class="inner">
						<h3 align="center">150</h3>
						<p align="center">Product counts</p>
					</div>
					<div class="icon">
						<i class="ion ion-bag"></i>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-8">
				<div class="small-box bg-warning">
					<div class="inner">
						<h3 align="center">44</h3>
						<p align="center">Selling count</p>
					</div>
					<div class="icon">
						<i class="ion ion-person-add"></i>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-8">
				<div class="small-box bg-danger">
					<div class="inner">
						<h3 align="center">65</h3>
						<p align="center">Pending Item count</p>
					</div>
					<div class="icon">
						<i class="ion ion-pie-graph"></i>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
