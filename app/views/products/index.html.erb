<p ><%= notice %></p>
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Products</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><%= link_to "Home", store_path(@store) %></li>
					<li class="breadcrumb-item active">Products</li>
				</ol>
			</div>
		</div>
	</div>
</section>
<section class="content">
	<div class="card">
		<div class="card-header">
			<h3 class="card-title"> All products</h3>&nbsp;
			<%= link_to "<button type='button', class= 'btn btn-primary'>Add new product</button>".html_safe, new_store_product_path(@store.slug) %>
			<%= link_to "<button type='button', class= 'btn btn-primary'>Back</button>".html_safe, store_path(@store) %>
			<div class="card-tools">
			</div>
		</div>
		<div class="card-body p-0">
			<table class="table table-striped projects">
				<thead>
				<tr>
					<th style="width: 1%">
						Sr.No.
					</th>
					<th style="width: 20%">
						Title
					</th>
					<th style="width: 30%">
						Description
					</th>
					<th>
						
					</th>
					<!-- <th style="width: 8%" class="text-center">
						
					</th> -->
					<th style="width: 20%">
						Actions
					</th>
				</tr>
				</thead>
				<tbody>
					<% @products.each_with_index do |product, i| %>
						<tr>
							<td>
								<%= i+1 %>
							</td>
							<td>
								<a>
									<%= product.title %>
								</a><br/>
								<small>
									<%= product.created_at %>
								</small>
							</td>
							<td>
								<%= product.description %>
							</td>
							<td class="project_progress">
								<%#= user.MobileNo %>
							</td>
<!-- 							<td class="project-state">
								<%# if user.status == true %>
									<span class="badge badge-success">Active</span>
								<%# else %>
									<span class="badge badge-dark">Deactive</span>
								<%#end %>
							</td> -->
							<td class="project-actions text-right">
								<%= link_to 'Show', store_product_path(@store, product), class: "btn btn-primary btn-sm"%>
								<%= link_to 'Edit', edit_store_product_path(@store, product), class: "btn btn-info btn-sm"%>
								<%= link_to 'Destroy', store_product_path(@store, product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm"%>
								<%#= link_to 'Destroy', store_user_path(@store, user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm"%>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</section>