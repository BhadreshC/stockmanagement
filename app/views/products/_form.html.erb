<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Add New Product</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><%= link_to "Home", store_path(@store) %></li>
					<li class="breadcrumb-item"><%= link_to 'products', store_products_path(@store) %> </li>
					<li class="breadcrumb-item active">new product</li>
				</ol>
			</div>
		</div>
	</div>
</section>
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6">
				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">Add New Product</h3>
					</div>
					<%= form_with(model: [@store,product], local: true) do |form| %>
						<% if product.errors.any? %>
							<div id="error_explanation">
								<h2><%= pluralize(product.errors.count, "error") %> prohibited this user from being saved:</h2>
								<ul>
									<% product.errors.full_messages.each do |message| %>
										<li><%= message %></li>
									<%end %>
								</ul>
							</div>
						<% end %>
						<div class="card-body">
							<div class="form-group">
								<%= form.label :title %><br />
								<%= form.text_field :title, required: true, placeholder: "Enter Title", class: "form-control" %>
							</div>
							<div class="mb-3">
								<%= form.label :description %><br />
								<%#= form.text_field :description, required: true, placeholder: "Enter description", class: "form-control" %>
								<%= form.text_area(:description,  style: "width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;",  placeholder: "Place some text here", class: "textarea")%>
							</div>
						</div>
						<div class="card-footer">
							<%= form.submit "submit", class: "btn btn-primary"%>
							<%= button_tag "Reset", type: :reset, class: "btn btn-primary"%>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>tinymce.init({selector:'textarea'});</script>
